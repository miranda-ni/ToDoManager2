<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditTaskActivity">

    <EditText
        android:id="@+id/edit_task_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter task title:"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/edit_task_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter task description:"
        app:layout_constraintTop_toBottomOf="@id/edit_task_title"/>

    <TextView
        android:id="@+id/edit_task_start_date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Press button to enter start date ->"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@id/edit_task_start_date_button"
        app:layout_constraintBottom_toBottomOf="@id/edit_task_start_date_button"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/edit_task_start_date_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHOOSE DATE"
        android:onClick="onChangeStartDate"
        app:layout_constraintTop_toBottomOf="@id/edit_task_description"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="8dp"
        />


    <TextView
        android:id="@+id/edit_task_deadline_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Press button to enter deadline ->"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@id/edit_task_deadline_button"
        app:layout_constraintBottom_toBottomOf="@id/edit_task_deadline_button"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/edit_task_deadline_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHOOSE DATE"
        android:onClick="onChangeDeadlineDate"
        app:layout_constraintTop_toBottomOf="@id/edit_task_start_date_button"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/details_checkbox_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_task_deadline_text"
        android:text="Completed: "/>

    <CheckBox
        android:id="@+id/edit_checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:layout_margin="3dp"
        app:layout_constraintTop_toBottomOf="@id/edit_task_deadline_text"
        app:layout_constraintLeft_toRightOf="@id/details_checkbox_text"/>


    <Button
        android:id="@+id/edit_task_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:onClick="onSaveEditTask"
        app:layout_constraintTop_toBottomOf="@id/details_checkbox_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/edit_task_cancel"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/edit_task_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:onClick="onCancelEditActivity"
        app:layout_constraintTop_toTopOf="@id/edit_task_save"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/edit_task_save"/>



</androidx.constraintlayout.widget.ConstraintLayout>